{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ES2022",
    "moduleResolution": "NodeNext",
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": false,
    "noEmit": true,
    "experimentalDecorators": true
  },
}
